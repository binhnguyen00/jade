{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    "strict": true,
    "pretty": true,
    "incremental": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/@types",
    "jsx": "react",
    "target": "es2024",
    "module": "es2022",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
  ]
}